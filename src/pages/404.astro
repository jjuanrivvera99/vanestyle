---
import Layout from '@layouts/Layout.astro';
import { getWhatsAppUrl } from '@config/site';

const whatsappUrl = getWhatsAppUrl('Hola! No pude encontrar una pagina en el sitio.');
---

<Layout
  title="Pagina no encontrada - 404"
  description="La pagina que buscas no existe"
  noindex={true}
>
  <section
    class="min-h-screen flex items-center justify-center py-20 bg-gradient-to-br from-primary-50 to-white"
  >
    <div class="container-custom text-center">
      <div class="max-w-2xl mx-auto">
        <!-- Large 404 -->
        <h1 class="font-heading text-8xl md:text-9xl font-bold text-primary-700 mb-4">404</h1>

        <h2 class="font-heading text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Pagina no encontrada
        </h2>

        <p class="text-lg text-gray-600 mb-8">
          Lo sentimos, la pagina que buscas no existe o ha sido movida.
        </p>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold rounded-full bg-primary-700 text-white hover:bg-primary-800 shadow-lg hover:shadow-xl transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
            Volver al Inicio
          </a>
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold rounded-full bg-[#25D366] text-white hover:bg-[#20bd5a] shadow-lg hover:shadow-xl transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
              ></path>
            </svg>
            Contactar Soporte
          </a>
        </div>

        <!-- Helpful Links -->
        <div class="mt-12 pt-8 border-t border-gray-200">
          <p class="text-gray-600 mb-4">Buscabas algo en particular?</p>
          <div class="flex flex-wrap gap-3 justify-center">
            <a href="/#servicios" class="text-primary-700 hover:text-primary-800 font-medium">
              Ver Servicios
            </a>
            <span class="text-gray-300">|</span>
            <a href="/#galeria" class="text-primary-700 hover:text-primary-800 font-medium">
              Galeria
            </a>
            <span class="text-gray-300">|</span>
            <a href="/#contacto" class="text-primary-700 hover:text-primary-800 font-medium">
              Contacto
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
