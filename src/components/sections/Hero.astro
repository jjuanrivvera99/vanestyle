---
import { siteConfig, getWhatsAppUrl } from '@config/site';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
import heroImage from '@assets/images/hero/hero.png';

const whatsappUrl = getWhatsAppUrl();
---

<section
  id="inicio"
  class="relative min-h-screen flex items-center pt-20 pb-8 lg:py-28 overflow-hidden bg-gradient-to-br from-primary-700 via-primary-600 to-accent-400"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-10 w-72 h-72 bg-white rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-300 rounded-full blur-3xl"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Content -->
      <div class="text-center md:text-left" data-aos="fade-right">
        <h1 class="font-script text-5xl md:text-6xl lg:text-7xl text-white mb-4 drop-shadow-lg">
          {siteConfig.name}
        </h1>
        <p class="text-2xl md:text-3xl text-white/90 font-heading font-semibold mb-6">
          {siteConfig.tagline}
        </p>
        <p class="text-lg text-white/80 mb-8 max-w-lg mx-auto md:mx-0">
          Servicios profesionales de manicure, pedicure y uñas acrílicas.
          <span class="font-semibold">Voy a donde estés.</span>
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <Button variant="whatsapp" size="lg" href={whatsappUrl} external>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
              ></path>
            </svg>
            Agendar Cita
          </Button>
          <Button
            variant="outline"
            size="lg"
            href="#servicios"
            class="border-white text-white hover:bg-white hover:text-primary-700"
          >
            Ver Servicios
          </Button>
        </div>

        <!-- Trust badges -->
        <div
          class="mt-10 flex flex-wrap gap-6 justify-center md:justify-start text-white/70 text-sm"
        >
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>+50 clientas felices</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Materiales premium</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Servicio a domicilio</span>
          </div>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative" data-aos="fade-left" data-aos-delay="200">
        <div
          class="aspect-[4/5] rounded-3xl bg-white/10 backdrop-blur-sm border border-white/20 overflow-hidden shadow-2xl"
        >
          <Image
            src={heroImage}
            alt="Manos elegantes con manicure profesional - Vane Style"
            class="w-full h-full object-cover"
            loading="eager"
            width={600}
            height={750}
            format="webp"
            quality={80}
          />
        </div>

        <!-- Decorative elements -->
        <div class="absolute -top-4 -right-4 w-24 h-24 bg-accent-300/30 rounded-full blur-2xl">
        </div>
        <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-primary-400/30 rounded-full blur-2xl">
        </div>
      </div>
    </div>
  </div>
</section>
