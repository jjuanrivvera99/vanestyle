---
import { siteConfig } from '@config/site';
import { Image } from 'astro:assets';
import gallery1 from '@assets/images/gallery/1.gallery.png';
import gallery2 from '@assets/images/gallery/2.gallery.png';
import gallery3 from '@assets/images/gallery/3.gallery.png';
import gallery4 from '@assets/images/gallery/4.gallery.png';
import gallery5 from '@assets/images/gallery/5.gallery.png';
import gallery6 from '@assets/images/gallery/6.gallery.png';

const galleryItems = [
  { id: 1, title: 'French Elegante', category: 'French', image: gallery1 },
  { id: 2, title: 'Diseño Floral', category: 'Nail Art', image: gallery2 },
  { id: 3, title: 'Geométrico Moderno', category: 'Diseño', image: gallery3 },
  { id: 4, title: 'Ombre Rosa', category: 'Ombre', image: gallery4 },
  { id: 5, title: 'Glitter Celebración', category: 'Glitter', image: gallery5 },
  { id: 6, title: 'Natural Elegante', category: 'Natural', image: gallery6 },
];
---

<section id="galeria" class="py-20 md:py-28 bg-white">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-2xl mx-auto mb-12" data-aos="fade-up">
      <h2 class="font-heading text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Galería de Trabajos
      </h2>
      <p class="text-gray-600 text-lg">
        Algunos de mis diseños favoritos. ¿Tienes una idea? ¡La hacemos realidad!
      </p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6">
      {
        galleryItems.map((item, index) => (
          <div
            class="group relative aspect-square rounded-2xl overflow-hidden bg-gray-100 cursor-pointer"
            data-aos="zoom-in"
            data-aos-delay={index * 100}
          >
            {/* Gallery Image */}
            <Image
              src={item.image}
              alt={`${item.title} - Diseño de uñas por Vane Style`}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
              width={400}
              height={400}
              format="webp"
              quality={75}
            />

            {/* Hover overlay */}
            <div class="absolute inset-0 bg-gradient-to-t from-primary-900/80 via-primary-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-end p-4">
              <div class="text-white">
                <p class="font-heading font-semibold">{item.title}</p>
                <p class="text-sm text-white/80">{item.category}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Instagram CTA -->
    <div class="text-center mt-12" data-aos="fade-up">
      <p class="text-gray-600 mb-4">¿Quieres ver más trabajos?</p>
      <a
        href={siteConfig.social.instagram.url}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-primary-700 hover:text-primary-800 font-semibold transition-colors group"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
          ></path>
        </svg>
        Sígueme en Instagram
        <svg
          class="w-4 h-4 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</section>
